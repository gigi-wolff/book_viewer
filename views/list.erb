<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title><%= @title %></title>

    <link rel="stylesheet" href="stylesheets/pure-min.css">
    <link rel="stylesheet" href="stylesheets/fonts.css">
    <link rel="stylesheet" href="stylesheets/book_viewer.css">
</head>

<body>

  <div id="layout">
      <a href="#menu" id="menuLink" class="menu-link">
          <span></span>
      </a>

      <div id="menu">
          <div class="pure-menu">
              <a class="pure-menu-heading" href="/">Table of files</a>
              <ul class="pure-menu-list">
              <% @files.each do |file| %>
                <li class="pure-menu-item">
                  <font size="1">
                    <a href="<%= file %>"><%= file %></a>
                  </font>
                </li>
              <% end %>
              </ul>
          </div>
      </div>

      <div id="main">
        <div class="header">
          <h1><%= @title %></h1>
          <h2>by Sir Arthur Doyle</h2>
        </div>

        <div class="content">
          <h2 class="content-subhead">Files</h2>

          <div class="pure-menu">
            <ul class="pure-menu-list">
              <% @files.each do |file| %>
                <li class="pure-menu-item">
                  <a href="<%= file %>"><%= file %></a>
                </li>
              <% end %>
            </ul>
            <p>
              <% if params[:sort] == "desc" %>
                <a href="/list">Sort ascending</a>
              <% else %>
                <a href="/list?sort=desc">Sort descending</a>
              <% end %>
            </p>
          </div>
        </div>
      </div>
  </div>

  <script type="text/javascript" src="/javascripts/ui.js"></script>
</body>
</html>
